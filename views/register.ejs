<!-- mobile design -->
<div class="d-block d-sm-none">
    <div class="py-sm-1" style="background-color: ghostwhite;height: 100vh; display: flex;align-items: center">
        <div class="container ss1-cont rounded">
        <div class="row mt-3 mb-5">
            <div class="d-sm-none col-sm-6">
